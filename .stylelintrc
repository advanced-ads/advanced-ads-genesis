{
  "extends": "@wordpress/stylelint-config",
  "ignoreFiles": [
	  "**/*.js",
	  "assets/css/*.min.css",
	  "node_modules/**/*.css",
	  "vendor/**/*.css"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
